{% render 'partials/head.liquid', title: 'Squad page' %}

{% comment %} <h2>Students</h2>
<ul>
  {% for person in persons %}
    <li><a href="/student/{{ person.id }}">{{ person.name }}</a></li>
  {% endfor %}
</ul> {% endcomment %}


<header>
  <img class="logo" src="/logo.svg" alt="logo FDND">
</header>

<main>

{% comment %} FILTER {% endcomment %}
<section class="filter-menu">
    <h3>Koffie filter</h3>
    <div class="filters">
      <a href="/cappuccino">Cappuccino</a>
      <a href="/esma_Caramel_Frapu">Esma Caramel Frapu</a>
      <a href="/espresso">Espresso</a>
      <a href="/geen">Geen</a>
      <a href="/irish_coffee">Irish coffee</a>
      <a href="/koffie_verkeerd">Koffie verkeerd</a>
      <a href="/latte">Latte</a>
      <a href="/long">Long black</a>
      <a href="/zwart">Met een gebakje</a>
    </div>
  </section>
  
  <section class="intro">
    <h1>SQUAD PAGE</h1>
    <label for="site search"></label>
    <div class="search">
      <input type="search">
      <button class="filter-btn"><img class="filter-icon" src="/filter_icon.svg" alt="filter"></button>
    </div>
  </section>

  <div class="cards">
    {% for person in persons %}
      <article class="front-card" style="background-image: url({{ person.avatar }});">
        <div class="front-card-info">
          <h2>{{ person.name }}</h2>
          <p>{{ person.fav_coffee }}</p>
          <button>MEER</button>
        </div>
      </article>
    {% endfor %}

    {% for person in persons %}
      <article class="back-card">
        <dl>
          <dt>{{ person.name }}</dt>
          <dd>{{ person.fav_coffee }}</dd>

          <dt>BIO</dt>
          <dd>{{ person.bio }}</dd>

          <dt>LINKS</dt>
          <dd><a href="#"></a><a href="#"></a></dd>
        </dl>
        <button>BACK</button>
      </article>
    {% endfor %}
  </div>

</main>

{% render 'partials/foot.liquid', squads: squads %}